{
  "action": {
    "default_title": "Automatic Summary"
  },
  "background": {
    "service_worker": "worker.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      }
    }
  },
  "content_scripts": [
    {
      "js": [
        "Readability.js",
        "common.css.js",
        "content.js"
      ],
      "matches": [
        "*://*/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "description": "context-aware website summarizer",
  "homepage_url": "https://github.com/RohitAg13/krisp",
  "incognito": "spanning",
  "manifest_version": 3,
  "name": "Krisp",
  "offline_enabled": true,
  "options_ui": {
    "open_in_tab": true,
    "page": "options.html"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "version": "0.1"
}
